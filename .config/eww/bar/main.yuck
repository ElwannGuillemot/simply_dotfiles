(deflisten _workspaces :inital "[]" `~/.config/eww/bar/scripts/workspaces.sh`)
(deflisten _active_window :inital "~" `~/.config/eww/bar/scripts/activewindow.sh`)
(deflisten _battery :inital "NaN%" `~/.config/eww/bar/scripts/battery.sh`)

(defwindow bar
  :monitor 0
  :stacking "fg"
  :namespace "bar"
  :exclusive true
  :geometry (geometry
    :x 0
    :y 0
    :width "100%"
    :height "25px"
    :anchor "top center"
  )

  (centerbox
    :orientation "h"
    :class "container"

    (Left)
    (Center)
    (Right)
  )
)

;; Sections

(defwidget Left []
  (box
    :halign "start"

    (Workspaces)
  )
)

(defwidget Center []
  (box
    :halign "center"

    (WindowTitle)
  )
)

(defwidget Right []
  (box
    :halign "end"

    (Battery)
    (PowerMenu)
  )
)

;; Widgets

(defwidget Workspaces []
  (box
    :class "workspaces"
    :space-evenly true

    (for workspace in _workspaces
      (box
        :class "workspace ${workspace.active == true ? 'active' : 'inactive'}"

        (eventbox :cursor "pointer"
          (button
            :onclick "hyprctl dispatch workspace ${workspace.name}"
            :valign "center"
            :halign "center"

            {workspace.name}
          )
        )
      )
    )
  )
)

(defwidget WindowTitle []
  (box
    :class "window_title"

    (label
      :text {_active_window}
    )
  )
)

(defwidget Battery []
  (box
    :class "battery"

    (label
      :text {_battery}
    )
  )
)

(defwidget PowerMenu []
  (box
    (eventbox :cursor "pointer"
      (button
        :class "power_menu"
        :onclick `~/.config/rofi/applets/bin/powermenu.sh`
        :timeout "30s"

        "Û∞ê•"
      )
    )
  )
)
