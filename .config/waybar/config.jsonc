{
    "layer": "top",
    "position": "top",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 44,
    "modules-left": ["tray", "wlr/workspaces","hyprland/window"],
    "modules-center": ["mpris"],
    "modules-right": ["custom/updates","bluetooth", "network", "backlight","pulseaudio","pulseaudio#microphone", "battery", "clock"],
    "hyprland/window": {
        "format": "{}"
    },

    "wlr/workspaces": {
        "on-click": "activate",
        "format": "{icon}",
        "disable-scroll": true,
        "sort-by-number": true,
        "persistent_workspaces": {
			"1": [],
			"2": [],
			"3": [],
			"4": [],
			"5": [],
			"6": []
		},
        "format-icons": {
            "1": "‰∏Ä",
            "2": "‰∫å",
            "3": "‰∏â",
            "4": "Âõõ",
            "5": "‰∫î",
            "6": "ÂÖ≠"
        }
    },

    "tray": {
        "icon-size": 16,
        "spacing": 10
    },

    "clock": {
        "format": "{:ÔÄó %H:%M  }",
        "interval": 60,
        "format-alt":"{:ÔÅ≥  %a %e %b  }",
        "tooltip-format": "<big>{:%d %B %Y}</big>\n\n<tt><small>{calendar}</small></tt>"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["Ôóù", "Ôóû", "Ôóü"],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon}",
        "format-icons": ["Ôñç", "Ôïπ", "Ôï∫", "Ôïª", "Ôïº", "ÔïΩ", "Ôïæ", "Ôïø", "ÔñÄ", "ÔñÅ", "Ôï∏"]
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": true,
        "format-muted": "ÔÄ¶ Muted",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "Ô°´ {volume}%",
        "format-source-muted": "Ô°¨ Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },

    "network": {
        "format-wifi": "Ôá´ {essid}",
        "format-ethernet": "Ethernet ÔÉ®",
        "tooltip-format-ethernet": "{ifname} via {gwaddr}",
        "tooltip-format-wifi": "{essid} - {signalStrength}%",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname} on {essid}"
    },

    "bluetooth": {
	    "format": "Ôäî {status}",
	    "format-connected": "Ôäî {num_connections}",
        "on-click": "blueberry",
	    "tooltip-format": "{device_alias}",
	    "tooltip-format-connected": "Ôäî {device_enumerate}",
	    "tooltip-format-enumerate-connected": "{device_alias}"
    },

    "mpris": {
      "title-len": 35,
      "interval" : 60,
      "dynamic-len": 35,
      "max-len": 55,
      "format": "{player_icon} {artist} : {title} - [{length}]",
      "format-paused": "{status_icon} {artist} : {title} - [{length}]",
      "player-icons": {
        "default": "‚ñ∂",
        "mpv": "üéµ",
        "spotify": "ÔÜº",
        "firefox": "Ôâ©"
      },
      "status-icons": {
        "paused": "Ó´ë"
      },
      "ignored-players": ["vlc"]
    },

    "custom/updates": {
      "format": "ÔÑπ {}",
      "interval" : 7200,
      "exec" : "checkupdates | wc -l"
    }
}


